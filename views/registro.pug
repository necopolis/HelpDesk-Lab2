extends layout

block content
        .row.mx-auto
            .col-5.mx-auto.mt-4.text-center
                .col-12.ms-auto.me-auto
                    if(mensajeError.length > 0)
                        .row.mx-auto
                            .col-5.mx-auto.mt-4.text-center
                            .alert.alert-info.alert-dismissible.fade.show(role='alert')
                                strong #{mensajeError} 
                                button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
        .row.mx-auto
            .col-5.mx-auto.my-4
                .card.rounded
                    .card-body.p-4
                        form(name="registro", action="./singup", method="post")
                            .form-group
                            label.form-label(for="nombre") Nombre
                            input.form-control#nombre(type="text", name="nombre", required)
                            .form-group
                            label.form-label(for="apellido") Apellido
                            input.form-control#apellido(type="text", name="apellido"  required)
                            .form-group
                            label(for="dni") DNI
                            input.form-control#dni(type="text" name="dni", required)
                            .form-group
                            label(for="celular") Celular
                            input.form-control#telefono(type="tel", name="celular", required)
                            .form-group
                            label(for="mail") Email
                            input.form-control#mail(type="email", name="mail" required)
                            .form-group
                            label(for="contrase単a") Contrase単a
                            input.col-sm-10(type="password", name="contrase単a", id="contrase単a" required)
                            .form-group.text-center
                            input.btn.btn-primary(type="submit", onclick="return validarRegistro()", value="Registrarse")