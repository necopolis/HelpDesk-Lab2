extends ../../layout

block content
        .container
            .row
                .col-12.ms-auto.text-center
                    h1.bold Cargar Area
            br
            .row.align-items-center
                .col-7.ms-auto.me-auto
                    - var url = area ? area.id_area + "?_method=PUT" : "";
                    form(action="./"+url, method="post")
                        .mb-3.row
                            label.col-sm-3.col-form-label.bg-info(for="nombre") Nombre del area: 
                            input(type="text" name="nombre" id="nombre", value=area ? area.nombre_area : "")
                        .mb-3.row
                            .col-sm-6.ms-auto.me-auto
                                .d-grid.gap-2
                                    input.btn.btn-dark.btn-lg(type="submit", onclick="return validarArea()" value=area ? "Actualizar" : "Cargar")